<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="16dp"
    android:background="@color/blue">

    <ImageView
        android:id="@+id/img_weather_item_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_dot_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_condition_item_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Hôm nay. Nhiều mây"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/img_weather_item_weather"
        app:layout_constraintStart_toEndOf="@id/img_weather_item_weather"
        app:layout_constraintTop_toTopOf="@id/img_weather_item_weather" />

    <TextView
        android:id="@+id/tv_temp_item_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/12"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/img_weather_item_weather"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_weather_item_weather" />
</androidx.constraintlayout.widget.ConstraintLayout>